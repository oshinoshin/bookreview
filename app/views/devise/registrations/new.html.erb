<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <h2>新規登録</h2>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード（6文字以上）" %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード再入力" %><br />
            <%= f.password_field :password, autocomplete: "new-password", id: "password_confirmation" %>
          </div>

          <div class="field">
            <%= f.label :name, "ユーザー名" %><br />
            <%= f.text_field :name, class: :form__name %>
          </div>

          <div class="field">
            <%= f.label :profile, "プロフィール" %><br />
            <%= f.text_area :profile, class: :form__text %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>

          <div class="legal-text">
          続行することで、BOOKREVIEWの
          <%= link_to "利用規約", "#" %>
          および
          <%= link_to "プライバシー規約", "#" %>
          に同意するものとみなされます。
        </div>
    <% end %>
  </div>
</div>
